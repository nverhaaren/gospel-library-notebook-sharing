{
  "name": "Gospel Library Notebook Sharing",
  "version": "0.3",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "login_popup.html"
  },
  "permissions": ["cookies", "downloads", "*://*.lds.org/"],
  "content_security_policy": "script-src 'self' https://edge.ldscdn.org; object-src 'self'"
}
